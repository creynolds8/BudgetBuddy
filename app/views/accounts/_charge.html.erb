<section class="transaction row-hover underline-row">
  <div class="row">
    <div class="col my-auto">
      <%= charge.date.strftime("%D") %>
    </div>
    <div class="col my-auto">
      <%= charge.merchant %>
    </div>
    <div class="col my-auto">
      <% if charge.transaction_type == 'expense' %>
        <p class="price minus"><%= "- #{number_to_currency(charge.amount.abs, format: "%u%n")}" %></p>
      <% else %>
        <p class="price plus"><%= "+ #{number_to_currency(charge.amount, format: "%u%n")}" %></p>
      <% end %>
    </div>
    <div class="col my-auto">
      <%= charge.category.name %>
    </div>
    <div class="col-1 my-auto">
      <div class="edit-button">
        <%= link_to edit_transaction_path(charge), data: { turbo_frame: "modal"} do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
          </svg>
        <% end %>
      </div>
    </div>
  <!--
  <td >
    <%= link_to "Edit", edit_transaction_path(charge), data: { turbo_frame: "modal"}, class: "btn btn-outline-primary" %>
  </td>
  --> 

  </div>
</section>